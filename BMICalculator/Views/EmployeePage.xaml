<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BMICalculator.View.EmployeePage"
             Title="EmployeePage"
             xmlns:local="clr-namespace:BMICalculator.ViewModels">
    
    <VerticalStackLayout>
        <Label Text="Enter Employee Name:"></Label>
        <Entry Text="{Binding EmployeeName}"></Entry>

        <Label Text="{Binding EmployeeName}" VerticalOptions="Center" FontSize="Large"></Label>

        <Button Text="Save" Command="{Binding SaveCommand}"></Button>

        <Button Text="BMI List"></Button>
    </VerticalStackLayout>
</ContentPage>